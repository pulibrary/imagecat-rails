{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "regexManagers:dockerfileVersions"
  ],
  "enabledManagers": ["asdf", "bundler", "circleci", "docker-compose", "dockerfile", "nodenv", "npm", "regex"],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePatterns": ["postgres"],
      "enabled": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.tool-versions$"
      ],
      "matchStrings": [
        "\\s+(?<currentValue>\\S+)\\s*#\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(\\s+versioning=(?<versioning>\\S+))?(\\s+registryUrl=(?<registryUrl>\\S+))?\\s*\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "fileMatch": [
        "^.circleci/config.yml$"
      ],
      "matchStrings": [
        "node-version:.*'(?<currentValue>.*?)'"
      ],
      "datasourceTemplate": "node-version",
      "depNameTemplate": "node"
    },
    {
      "fileMatch": [
        "^.circleci/config.yml$"
      ],
      "matchStrings": [
        "cimg\/ruby:(?<currentValue>.*?)-"
      ],
      "datasourceTemplate": "ruby-version",
      "depNameTemplate": "ruby"
    }
  ],
  "prHourlyLimit": 3
}
